@model IEnumerable<Vodly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @Html.ActionLink("New Movie", "NewMovie", "Movies",null, new { style="margin-top:14px", @class="btn btn-success"})
    @if (Model.Count() > 0)
    {
        <h2>Movies List</h2>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(item.Name, "EditMovie", new { id = item.Id })</td>
                        <td>@item.Genre.Name</td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <h2>Doesn´t exist any customer!!</h2>
    }
</div>

