@model Vodly.Models.Customer

@{
    ViewBag.Title = "CustomerDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CustomerDetail</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <ul>
        <li>@Html.Label(Model.Name)</li>
        @if (Model.Birthday != null)
        {
            <li>@Html.Label(Model.Birthday.ToString())</li>
        }
    </ul>
</div>
